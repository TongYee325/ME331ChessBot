<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="my_urdf">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import my_urdf urdf file -->
    <xacro:include filename="$(find my_urdf)/urdf/urdf.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="my_urdf.ros2_control.xacro" />


    <xacro:my_urdf_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
